<resources>
    <!-- Dialog Base Style -->
    <style name="ThreeDollars.Dialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@drawable/rect_white_radius16</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- Alert Dialog -->
    <style name="ThreeDollars.AlertDialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="colorPrimary">@color/color_main_red</item>
        <item name="colorSecondary">@color/pink</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <!-- Bottom Sheet Dialog -->
    <style name="ThreeDollars.BottomSheetDialog" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ThreeDollars.BottomSheet.Modal</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="ThreeDollars.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@drawable/rect_gray_top_corner</item>
        <item name="backgroundTint">@color/gray95</item>
        <item name="shapeAppearance">@style/ShapeAppearance.ThreeDollars.BottomSheet</item>
    </style>

    <!-- Bottom Sheet Shape -->
    <style name="ShapeAppearance.ThreeDollars.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_xl</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_xl</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Full Screen Dialog -->
    <style name="ThreeDollars.FullScreenDialog" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:windowAnimationStyle">@style/ThreeDollars.DialogAnimation</item>
    </style>

    <!-- Dialog Animation -->
    <style name="ThreeDollars.DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Loading Dialog -->
    <style name="ThreeDollars.LoadingDialog" parent="ThreeDollars.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>