<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/ic_close_black"
            app:layout_constraintBottom_toBottomOf="@id/iv_badge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_badge"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/add_certification"
            android:src="@drawable/ic_badge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_badge"
            tools:text="가게 근처에서\n 방문을 인증할 수 있어요" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rect_black_radius24"
            android:backgroundTint="@color/gray95"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/layout_progress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <ImageView
                android:id="@+id/iv_category"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/category"
                android:src="@drawable/icon_menu_bungeoppang_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layout_store_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/iv_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_category"
                app:layout_constraintTop_toTopOf="@id/iv_category">

                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginBottom="4dp"
                    android:maxLines="1"
                    android:text="@string/category"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/applegothic_bold"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_store_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/category"
                    android:textColor="@color/color_sub_red"
                    android:textSize="12sp"
                    android:fontFamily="@font/applegothic_bold"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_store_info">

                <LinearLayout
                    android:id="@+id/map_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_light_gray_corner_top"
            android:backgroundTint="@color/gray95"
            android:paddingHorizontal="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_certification_progress"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_progress_background"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/rect_red_radius48"
                android:backgroundTint="@color/gray90"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_progress" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_indicator"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_marginHorizontal="4dp"
                android:indeterminate="false"
                android:progressTint="@color/color_main_red"
                app:indicatorColor="@color/color_main_red"
                app:layout_constraintBottom_toBottomOf="@id/view_progress_background"
                app:layout_constraintEnd_toStartOf="@id/iv_end"
                app:layout_constraintStart_toStartOf="@id/view_progress_background"
                app:layout_constraintTop_toTopOf="@id/view_progress_background"
                app:trackColor="@color/gray90"
                app:trackCornerRadius="10dp" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:bufferType="spannable"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/iv_end"
                app:layout_constraintStart_toStartOf="@id/view_progress_background"
                app:layout_constraintTop_toBottomOf="@id/view_progress_background"
                tools:text="인증까지 333m" />

            <ImageView
                android:id="@+id/iv_end"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_black"
                android:backgroundTint="@color/gray80"
                android:padding="4dp"
                android:src="@drawable/icon_menu_bungeoppang_selected"
                app:layout_constraintBottom_toBottomOf="@id/view_progress_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/view_progress_background" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>