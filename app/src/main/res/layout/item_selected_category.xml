<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
    
        <variable
            name="item"
            type="com.zion830.threedollars.ui.addstore.ui_model.SelectedCategory" />
    
        <variable
            name="listener"
            type="zion830.com.common.listener.OnItemClickListener" />
    </data>
    
    <FrameLayout
        android:id="@+id/layout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> listener.onClick(item)}"
        android:paddingBottom="4dp">
        
        <LinearLayout
            android:id="@+id/btn_add_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                isSelected="@{item.isSelected}"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="8dp"
                android:layout_marginStart="7dp"
                android:background="@{item.isSelected ? @drawable/circle_sub_red : @drawable/circle_gray}"
                android:padding="8dp"
                android:scaleType="fitCenter" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.menuType.name}"
                android:textColor="@{item.isSelected ? @color/color_black : @color/gray5}"
                android:textSize="12sp"
                tools:text="붕어빵" />
        </LinearLayout>
        
        <ImageButton
            android:id="@+id/ib_delete_category"
            invisibleIf="@{!item.isSelected}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_small" />
    </FrameLayout>
</layout>