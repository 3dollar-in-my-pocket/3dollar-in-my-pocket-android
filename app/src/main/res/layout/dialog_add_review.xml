<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.zion830.threedollars.ui.category.StoreDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_white"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/ib_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommend_store"
                android:textColor="@color/color_black"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layout_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_pink_stroke_corner8"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title">

                <com.willy.ratingbar.ScaleRatingBar
                    android:id="@+id/rating"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="12dp"
                    app:srb_drawableEmpty="@drawable/ic_star_light_gray"
                    app:srb_drawableFilled="@drawable/ic_star_on"
                    app:srb_numStars="5"
                    app:srb_scrollable="true"
                    app:srb_starHeight="30dp"
                    app:srb_starPadding="8dp"
                    app:srb_starWidth="30dp"
                    app:srb_stepSize="1" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_content"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/selector_edittext"
                android:gravity="top"
                android:hint="@string/recommend_store_hint"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_gray1"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_rating" />

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_btn_radius14"
                android:elevation="@null"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:text="@string/recommend_store_finish"
                android:textColor="@color/color_white"
                android:enabled="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_content"
                tools:ignore="UnusedAttribute" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>